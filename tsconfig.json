{
  "compilerOptions": {
    "target": "es2016",                                  
    "experimentalDecorators": true, 
    "lib" : ["es6"],                
    "emitDecoratorMetadata": true,                        
    "module": "commonjs",                                
    "rootDir": "./src",                                  
    "typeRoots": [
       "./node_modules/@types",
       "./src/@types"
     ],                                  
   "resolveJsonModule": true,                        
    "allowJs": true,                                  
    "outDir": "./dist",                                   
    "removeComments": true,                           
    "esModuleInterop": true,
    "strictPropertyInitialization": false,                                
    "forceConsistentCasingInFileNames": true,              
    "strict": true,                                          
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@errors/*": ["shared/errors/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
