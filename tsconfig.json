{
  "compilerOptions": {
    "target": "es2016",                                  
    "experimentalDecorators": true, 
    "lib" : ["es6"],                
    "emitDecoratorMetadata": true,                        
    "module": "commonjs",                                
    "rootDir": "./src",                                  
    "typeRoots": [
       "./node_modules/@types",
       "./src/@types"
     ],                                  
   "resolveJsonModule": true,                        
    "allowJs": true,                                  
    "outDir": "./dist",                                   
    "removeComments": true,                           
    "esModuleInterop": true,
    "strictPropertyInitialization": false,                                
    "forceConsistentCasingInFileNames": true,              
    "strict": true,                                          
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["./src/controllers/*"],
      "@models/*": ["./src/models/*"],
      "@views/*": ["./src/views/*"],
      "@config/*": ["./src/config/*"],
      "@repositories/*": ["./src/repositories/*"],
      "@services/*": ["./src/services/*"],
      "@util/*": ["./src/util/*"] 
    }
  },
  "include": [
    "./src/**/*"
  ]
}
